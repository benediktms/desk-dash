<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">

<%= simple_form_for @booking do |f| %>
 <div class="row justify-content-center"></div>
<%= f.association :user %>
 <div class="row justify-content-center"></div>
<%= f.association :space %>
 <div class="row justify-content-center"></div>
<%= f.input :day %>
 <div class="d-flex justify-content-center">
<%= f.submit "Update booking", class: "btn btn-outline-secondary" %>
</div>
<% end %>

   </div>
  </div>
</div>