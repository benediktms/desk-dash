<div class="container my-3">
  <% if @bookings.any? %>
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="card mx-3 my-3" style="width: 18rem;">
          <img class="card-img-top" src="<%= booking.space.photo %>" alt="<%= booking.space.name %>"/>
          <div class="card-body">
            <h5 class="card-title">Booking number: <%= booking.id %>
            <br>
            Booked by <%= booking.user.name%> for the <%= booking.day %> at <%= booking.space.name %> </h5>
          </div>
             <div class="d-flex justify-content-around">
              <%= link_to "Update", edit_booking_path(booking), class: "btn btn-outline-secondary" %>
              <%= link_to "Delete", booking_path(booking), method: :delete,  data: { confirm: "Are you sure?" }, class: "btn btn-outline-secondary" %>
            </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You currently have no bookings!</p>
  <% end %>
</div>
<div class="d-flex justify-content-center">
<%= link_to 'Back to spaces list', spaces_path, class: "btn btn-outline-secondary" %>
</div>