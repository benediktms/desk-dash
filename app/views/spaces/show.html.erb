<div class="banner" style="background-image: url(<%= @space.photo %>)"></div>

  <div class="container">

  <div class="row justify-content-center px-3">

    <div class="col-md-8 col-sm-10">

      <div class="row">
        <h1 class="py-5"><%= @space.name %></h1>
      </div>

      <div class="row">

        <h2>Information:</h2>
      </div>

      <div class="row align-items-center">
        <div class="col">
          <div class="card mt-3 mb-5">
            <div class="card-body">
              <div class="card-text">
                <p>Price: <i class="fas fa-pound-sign"></i><%= @space.price %></p>
                <p>Desks available: <%= @space.number_of_desks %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="col">
          <p><%= @space.address %></p>
        </div>

      </div>


      <div class="d-flex flex-column mt-3 mb-5">


        <div class="row mt-3 align-items-center">
          <div class="col col-2">
            <i class="fas fa-door-open" style="font-size: 50px"></i>
          </div>
          <div class="col">
            <h4>Open door</h4>
            <p>This office has an open door policy which means you can coem and go as you please! You may be asked to present a booking confirmation when you arrive.</p>
          </div>
        </div>

        <div class="row mt-3 align-items-center">
          <div class="col col-2">
            <i class="fas fa-hand-sparkles" style="font-size: 50px;"></i>
          </div>
          <div class="col">
            <h4>Good hygiene standards</h4>
            <p>This work space is in compliance with social distancing measures and governemtn advised hygiene standards. Hand sanitizer and other measures will be provided on site at all times.</p>
          </div>
        </div>

        <div class="row mt-3 align-items-center">
          <div class="col col-2">
            <i class="far fa-calendar-alt" style="font-size: 50px"></i>
          </div>
          <div class="col">
            <h4>Cancellation policy</h4>
            <p>You can cancel your booking up to 24h before your booking date.</p>
          </div>
        </div>

        <% if @space.fiber_optic %>
          <div class="row mt-3 align-items-center">
            <div class="col col-2">
              <i class="fas fa-wifi" style="font-size: 50px"></i>
            </div>
            <div class="col">
              <h4>Super fast Fiber Optic connection</h4>
              <p>This work space offers guaranteed fiber optic connection to supercharge your workflow!</p>
            </div>
          </div>
        <% end %>

        <% if @space.catering %>
          <div class="row mt-3 align-items-center">
            <div class="col col-2">
              <i class="fas fa-mug-hot" style="font-size: 50px"></i>
            </div>
            <div class="col">
              <h4>Catering</h4>
              <p>This work space has included free catering wehn you book your slot! Usualyl this means that you'll get all-you-can drink coffee, but you may get other goodies too depending on your booking!</p>
            </div>
          </div>
        <% end %>

<!--        <div class="row mt-3 align-items-center">-->
<!--          <div class="col">-->
<!--            <h4>See what others have said about this space</h4>-->
            <%# @space.reviews.each do |review| %>
<!--              <p><%#=review.content %></p>-->
              <%#= link_to 'Delete', space_review_path(@space[:id], review), method: :delete %>
<!--              <hr>-->
            <%# end %>
<!--          </div>-->
<!--        </div>-->

      </div>

      <div class="row">

          <%= link_to "Book this space", new_booking_path, class: "btn btn-outline-secondary mr-3" %>
          <%= link_to spaces_path do %>
            <button class="btn btn-outline-secondary">Back to spaces</button>
          <% end %>

      </div>

      <div class="row pt-5 flex-column">

        <%= link_to "Add a review", new_space_review_path(@space), class: "mr-3" %>

        <div class="d-felx">
          <% @space.reviews.each do |review| %>
            <% review.rating.to_i.times do %>
              <span class="fa fa-star checked"></span>
            <% end %>
            <p><%=review.content %></p>
            <%= link_to 'Delete', space_review_path(@space[:id], review), method: :delete %>
            <hr>
          <% end %>
        </div>

      </div>

    </div>

  </div>

</div>
